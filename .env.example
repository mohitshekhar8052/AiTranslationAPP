# OpenAI API Key (optional - only if using OpenAI GPT for summarization)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model Cache Directory (optional - where models are stored)
# Leave empty to use default cache location
MODEL_CACHE_DIR=

# Maximum Audio File Size in MB
MAX_AUDIO_SIZE_MB=200

# Whisper Model Size (tiny, base, small, medium, large)
DEFAULT_WHISPER_MODEL=base

# Summarization Settings
SUMMARY_MAX_LENGTH=150
SUMMARY_MIN_LENGTH=50

# Temporary Upload Directory
TEMP_UPLOAD_DIR=./temp_uploads
